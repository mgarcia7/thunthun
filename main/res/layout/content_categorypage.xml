<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blackbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_categorypage"
    tools:context="com.example.margaretann.pahkthecah.categorypage">

    <TextView android:text="@string/categorypagetitle" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#fffdfe"
        android:textSize="33sp"
        android:typeface="serif"
        android:textColorLink="#50a8fb"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/historicalbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="310dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="#9ae0fb"
        android:text="@string/historicalbutton"
        android:textSize="30sp"
        android:typeface="serif"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/sportsbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="#68c1fb"
        android:text="@string/sportsbutton"
        android:textSize="30sp"
        android:typeface="serif"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/artsbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="#47aafb"
        android:text="@string/artsbutton"
        android:textSize="30sp"
        android:typeface="serif"/>

</RelativeLayout>
