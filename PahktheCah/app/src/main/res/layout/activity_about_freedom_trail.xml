<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.margaretann.pahkthecah.aboutFreedomTrail"

    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freedom Trail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/LocationName"
        android:focusableInTouchMode="true"
        android:focusable="false"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textIsSelectable="true"
        android:autoText="false"
        android:textStyle="bold"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LocationImage"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:contentDescription="jkl"
        android:adjustViewBounds="true"
        android:src="@drawable/freedomtrail"
        android:scaleType="fitCenter"
        android:layout_below="@+id/LocationName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:longClickable="true"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:backgroundTint="#fefefe"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:text="The Freedom Trail is the perfect introduction to Colonial Revolutionary Boston. The Trail takes the visitor to 16 historical sites using a red brick line as a guide. Go back to the Historical Tour menu and pick places such as Massachusetts State House, Granary Burying Ground, Old State House, Paul Revere House, Old North Church.  "
        android:id="@+id/LocationBlurb"
        android:textSize="18dp"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:textIsSelectable="true"
        android:maxHeight="150dp"
        android:textAlignment="center"
        android:layout_above="@+id/googleButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/googleButton"

        android:background="#99d4ff"
        android:textSize="18dp"
        android:typeface="serif"
        android:text="@string/to_map_button"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_map_button"
        android:textSize="25dp"
        android:typeface="serif"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_below="@+id/LocationImage"
        android:layout_centerHorizontal="true" />
</RelativeLayout>