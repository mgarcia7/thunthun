<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.margaretann.pahkthecah.aboutAgganis"
    tools:showIn="@layout/activity_main"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/LocationName"
        android:focusableInTouchMode="true"
        android:focusable="false"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textIsSelectable="true"
        android:autoText="false"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LocationImage"
        android:maxHeight="200dp"
        android:maxWidth="300dp"
        android:contentDescription="jkl"
        android:adjustViewBounds="true"
        android:src="@drawable/agganis"
        android:scaleType="fitCenter"
        android:layout_below="@+id/LocationName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:longClickable="true"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:backgroundTint="#fefefe"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:text="This will be a text box eventually it will describe what the location is and why it&apos;s relevant. This will be a text box eventually it will describe what the location is and why it&apos;s relevant. This will be a text box eventually it will describe what the location is.This will be a text box eventually it will describe what the location is and why it&apos;s relevant. This will be a text box eventually it will describe what the location is and why it&apos;s relevant. This will be a text box eventually it will describe what the location is."
        android:id="@+id/LocationBlurb"
        android:layout_below="@+id/LocationImage"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:scrollbars="vertical"
        android:textColor="#ffffff"
        android:textIsSelectable="true"
        android:maxHeight="150dp"
        android:scrollIndicators="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/googleButton"
        android:layout_below="@+id/LocationBlurb"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/LocationName"
        android:layout_alignStart="@+id/LocationName"
        android:layout_alignRight="@+id/LocationName"
        android:layout_alignEnd="@+id/LocationName"
        android:background="#99d4ff"
        android:textSize="18dp"
        android:textColor="#000000" />
</RelativeLayout>
